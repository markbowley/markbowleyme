<style>
	.container, footer { 
		border-top: 1px solid var(--accent);
		width: 720px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 2rem 0;
	}
	.container h3 {
	}
	footer {
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: var(--gray);
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1em;
		font-size: .85rem;
	}
	footer a {
		text-decoration: none;
		color: var(--gray);
	}
	.social-links {
		display: flex;
		gap: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--gray);
	}
	.social-links a:hover {
		color: var(--accent);
	}
	@media (max-width: 720px) {
		.container, footer {
			padding: 2rem 2em;
			max-width: calc(100% - 4em);
		}
	}
</style>
